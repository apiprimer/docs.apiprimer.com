---
import Apiprimer from './logos/api.svg';
import Cloudflare from './logos/cloudflare.svg';
import AstroLogo from './logos/astro.svg';
---

<div dir="ltr" lang="en" class="sponsors">
	<h2 class="sponsors-title">{Astro.locals.t('leftSidebar.sponsoredBy')}</h2>
	<a
		href="https://apiprimer.com"
		aria-label="apiprimer"
	>
		<Apiprimer width="50" aria-hidden="true" fill="currentColor" />
	</a>

	<a
		href="https://www.cloudflare.com"
		aria-label="cloudflare"
	>
		<Cloudflare width="50" height="50" aria-hidden="true" fill="currentColor" />
	</a>

	<a
		href="https://astro.build"
		aria-label="astro"
	>
		<AstroLogo width="50" height="50" aria-hidden="true" fill="currentColor" />
	</a>
</div>

<style>
	.sponsors {
		display: flex;
		flex-wrap: wrap;
		gap: 0 1.5rem;
		padding: 1.5rem 0.5rem 0.75rem;
	}
	a {
		display: flex;
		align-items: center;
		min-height: 3rem;
		opacity: 0.75;
	}
	a:hover {
		opacity: 1;
	}
	svg {
		color: var(--sl-color-white);
		fill: currentColor;
	}

	.sponsors-title {
		width: 100%;
		color: var(--sl-color-gray-3);
		font-size: var(--sl-text-xs);
		font-weight: 400;
		font-family: var(--__sl-font-mono);
		line-height: var(--sl-line-height-headings);
		margin: 0 0 0.5rem;
	}
</style>
